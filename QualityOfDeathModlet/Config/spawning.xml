<!-- 
Here is a template XML format for xpath for A17+ 

This XML file has to be named the same as its vanilla file. If you are editing items.xml, this file needs to be called items.xml

Here are some example xpath:
	Changes the Light value to 0.45
  	<set xpath="/items/item[@name='meleeToolTorch']/property[@name='LightValue']/@value">0.45</set>
	
	Adds in a new torch at the bottom of the items.xml
	<append xpath="/items" >
		<item name="AnothermeleeToolTorch">
			<property name="Extends" value="meleeToolTorch"/>
			<property name="LightValue" value="1" />
		</item>
	</append>
	
	Deletes the torch.
	<remove xpath="/items/item[@name='meleeToolTorch']" />
	
-->
<configs>

	<insertAfter xpath="/spawning/biome[@name='pine_forest']/spawn[@entitygroup='FriendlyAnimalsForest']">
		<spawn maxcount="2" respawndelay="2" time="Any" entitygroup="ZombiesAll" />
		<spawn maxcount="1" respawndelay="2" time="Night" entitygroup="ZombiesAll" />
	</insertAfter>

	<insertAfter xpath="/spawning/biome[@name='desert']/spawn[@entitygroup='FriendlyAnimalsDesert']">
		<spawn maxcount="2" respawndelay="2" time="Any" entitygroup="ZombiesAll" />
		<spawn maxcount="1" respawndelay="2" time="Night" entitygroup="ZombiesAll" />
	</insertAfter>

	<insertAfter xpath="/spawning/biome[@name='burnt_forest']/spawn[@entitygroup='EnemyAnimalsBurntForest']">
		<spawn maxcount="1" respawndelay="2" time="Any" entitygroup="ZombiesBurntForest" />
		<spawn maxcount="1" respawndelay="2" time="Night" entitygroup="ZombiesBurntForest" />
	</insertAfter>

	<insertAfter xpath="/spawning/biome[@name='snow']/spawn[@entitygroup='FriendlyAnimalsSnow']">
		<spawn maxcount="1" respawndelay="2" time="Any" entitygroup="SnowZombies" />
		<spawn maxcount="1" respawndelay="2" time="Night" entitygroup="SnowZombies" />
	</insertAfter>


</configs>