<configs>
<!-- Makes changes to all vehicles's velocityMax to our desired value -->
<!-- The original values of each vehicles are as followed: -->
<!-- Gyrocopter			7,10	-->
<!-- Bicycle			5,10	-->
<!-- Minibike			7,10	-->
<!-- Motorcycle			9,14	-->
<!-- Truck				9,13	-->
<!-- The latter value is maximum speed a vehicle can reach; in meter per second. -->
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@name='velocityMax']/@value">7,13.5</set>
	<set xpath="/vehicles/vehicle[@name='vehicleBicycle']/property[@name='velocityMax']/@value">6,10.5</set>
	<set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@name='velocityMax']/@value">8.5,11.5</set>
	<set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@name='velocityMax']/@value">10,14.2</set>
	<set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@name='velocityMax']/@value">10,14.1</set>
	
<!-- Increase Fuel Tank Storage Capacity - 4 = 100, 8 = 200, 12 = 300, 40 = 1000-->
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@class='fuelTank']/property[@name='capacity']/@value">40</set><!--Default=8 - 200 Gas-->
	<set xpath="/vehicles/vehicle[@name='vehicleMinibike']/property[@class='fuelTank']/property[@name='capacity']/@value">4</set><!--Default=4 - 100 Gas-->
	<set xpath="/vehicles/vehicle[@name='vehicleMotorcycle']/property[@class='fuelTank']/property[@name='capacity']/@value">12</set><!--Default=12 - 300 Gas-->
	<set xpath="/vehicles/vehicle[@name='vehicle4x4Truck']/property[@class='fuelTank']/property[@name='capacity']/@value">40</set><!--Default=40 - 1000 gas-->
	
<!-- Increase Fuel Mileage -->
	<set xpath="/vehicles/vehicle[@name='vehicleGyrocopter']/property[@class='engine']/property[@name='fuelKmPerL']/@value">4</set>
	
</configs>